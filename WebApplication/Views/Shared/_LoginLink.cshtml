@model WebApplication.Models.Login.LoginLinkUserModel

@{
    ViewBag.Title = "_LoginLink";
}

<div class="icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11 icon-header-noti js-show-cart" data-notify="@Model.Baskets.Count">
    <i class="zmdi zmdi-shopping-cart"></i>
</div>

@if (!Model.IsLoggedIn)
{
    <div id="icon" class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
        <i class="zmdi zmdi-account zmdi-hc-lg"></i>
    </div>
}
else
{
    <div class="dis-block icon-header-item cl2 hov-cl1 trans-04 p-l-22 p-r-11">
        <ul class="islogined">
            <li>
                <img src="/../../images/avatar.jpg" class="avatar-user" alt="IMG-AVATAR">
                <ul class="sub-menu">
                    <li class="informationBlock cl13">@Model.User.Name @Model.User.Surname</li>
                    <li class="informationBlock">@(Model.User.Role == "user"? "Пользователь" : "Администратор")</li>
                    @if (Model.User.Role == "admin")
                    {
                        <li class="roleBorder start"><hr /></li>
                        <li><a href="#" class="add-items" id="create-product-button">Add items</a></li>
                    }
                    <li class="roleBorder end"><hr /></li>
                    <li id="imgLogin" class="logoutBtn">Exit</li>
                </ul>
            </li>
        </ul>
    </div>

    <!-- Modal-Add -->
    <div id="add-field" class="wrap-modal1 js-modal1 p-t-60 p-b-20">
        <div class="overlay-modal1 js-hide-modal1"></div>

        <div class="container">
            <div class="bg0 p-t-60 p-b-30 p-lr-15-lg how-pos3-parent" style="border-radius: 30px;">
                <button class="how-pos3 hov3 trans-04 js-hide-modal1">
                    <img src="@Url.Content("~/images/icons/icon-close.png")" alt="CLOSE">
                </button>

                <div class="row-add">
                    <div class="create-prodict">
                        <input value="0" hidden name="id">
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz" style="width: 80%;">
                            <input class="input100 product-input" type="text" name="name" placeholder="Name">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz" style="width: 80%;">
                            <input class="input100" type="text" name="price" placeholder="Price">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz" style="width: 80%;">
                            <input class="input100" type="number" min="1" max="100" name="count" placeholder="Count">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz" style="width: 80%;">
                            <textarea class="input100" name="desc" placeholder="Description" maxlength="499" id="desc" style="margin-top: 0px; margin-bottom: 0px; height: 160px; padding-top: 12px; resize: none;"></textarea>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz" style="width: 80%;">
                            <select class="input100" name="cat">
                                <option value="1">Компьютеры</option>
                                <option value="2">Ноутбуки</option>
                                <option value="3">Периферия</option>
                                <option value="4">Аксессуары</option>
                                <option value="5">Разное</option>
                            </select>
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                        <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz" style="width: 80%;">
                            <input class="input100" type="file" name="file" id="file" placeholder="Url" style="padding-top: 10px;">
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-envelope" aria-hidden="true"></i>
                            </span>
                        </div>
                        <div class="container-login100-form-btn" style="width: 80%;">
                            <button class="login100-form-btn">
                                Load
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

